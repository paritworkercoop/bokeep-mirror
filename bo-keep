#!/usr/bin/env python

# Gtk
import gtk

# Bo-Keep
from bokeep.config import get_bokeep_bookset()
from bokeep.book import BoKeepBookSet
from bokeep.gui.mainwindow import MainWindow
from bokeep.book_transaction import \
     new_transaction_committing_thread

def bokeep_main():
    bookset = get_bokeep_bookset()
    window = MainWindow(bookset)
    gtk.main()
    bookset.close_primary_connection()
    
if __name__ == "__main__":
    bokeep_main()
